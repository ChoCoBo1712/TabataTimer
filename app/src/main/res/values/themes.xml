<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TabataTimer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="Theme.TabataTimer.SmallFont" parent="Theme.TabataTimer">
        <item name="android:textSize">12sp</item>
        <item name="text_medium">14sp</item>
        <item name="text_big">24sp</item>
        <item name="text_large">44sp</item>
    </style>

    <style name="Theme.TabataTimer.MediumFont" parent="Theme.TabataTimer">
        <item name="android:textSize">16sp</item>
        <item name="text_medium">20sp</item>
        <item name="text_big">30sp</item>
        <item name="text_large">50sp</item>
    </style>

    <style name="Theme.TabataTimer.LargeFont" parent="Theme.TabataTimer">
        <item name="android:textSize">20sp</item>
        <item name="text_medium">26sp</item>
        <item name="text_big">36sp</item>
        <item name="text_large">56sp</item>
    </style>

    <style name="Theme.TabataTimer.Settings.SmallFont" parent="PreferenceThemeOverlay">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.TabataTimer.Settings.MediumFont" parent="PreferenceThemeOverlay">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.TabataTimer.Settings.LargeFont" parent="PreferenceThemeOverlay">
        <item name="android:textSize">20sp</item>
    </style>
</resources>